{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle figurine{% endblock %}

{% block body %}
<h1>Créer une nouvelle figurine</h1>

{{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.description) }}
    {{ form_row(form.imageName) }}
    {{ form_row(form.prix) }}
    <button class="btn btn-success">Enregistrer</button>
{{ form_end(form) }}

<a href="{{ path('app_figurine_index') }}">Retour à la liste</a>
{% endblock %}
