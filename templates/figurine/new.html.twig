{% extends 'base.html.twig' %}

{% block title %}Créer une Figurine{% endblock %}

{% block body %}
    <h1>Créer une nouvelle figurine</h1>

    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.description) }}
        {{ form_row(form.imageName) }}
        {{ form_row(form.prix) }}
        <button class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}

    <a href="{{ path('figurine_index') }}">⬅ Retour à la liste</a>
{% endblock %}
