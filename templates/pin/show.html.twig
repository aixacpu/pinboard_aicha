{% extends 'base.html.twig' %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                {% if pin.imageName %}
                    <img src="{{ asset('uploads/pins/' ~ pin.imageName) }}" 
                         class="card-img-top" 
                         style="max-height:500px; object-fit:cover;">
                {% endif %}
                <div class="card-body">
                    <h2 class="card-title">{{ pin.title }}</h2>
                    <p class="card-text">{{ pin.description ?: "Pas de description." }}</p>
                    <p class="text-muted small">
                        Auteur : {{ pin.user.firstname }} {{ pin.user.lastname }}<br>
                        Créé le {{ pin.createdAt|date('d/m/Y H:i') }}<br>
                        Modifié le {{ pin.updatedAt|date('d/m/Y H:i') }}
                    </p>
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_pin_index') }}" class="btn btn-secondary btn-sm">Retour</a>
                        {% if app.user and app.user == pin.user %}
                            <a href="{{ path('app_pin_edit', {id: pin.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            <form method="post" action="{{ path('app_pin_delete', {id: pin.id}) }}" onsubmit="return confirm('Supprimer ce Pin ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pin.id) }}">
                                <button class="btn btn-danger btn-sm">Supprimer</button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
