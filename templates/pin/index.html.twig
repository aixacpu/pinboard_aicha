{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="mb-4 text-center">Tous les Pins</h1>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        {% for pin in pins %}
            <div class="col">
                <div class="card shadow-sm h-100">
                    {% if pin.imageName %}
                        <img src="{{ asset('uploads/pins/' ~ pin.imageName) }}" 
                             class="card-img-top" 
                             style="object-fit:cover; height:250px; border-radius:10px 10px 0 0;">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ pin.title }}</h5>
                        <p class="card-text small text-muted">
                            Par {{ pin.user.firstname }} {{ pin.user.lastname }}
                        </p>
                        <a href="{{ path('app_pin_show', {id: pin.id}) }}" class="btn btn-outline-primary btn-sm">Voir</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center">Aucun pin trouv√©.</p>
        {% endfor %}
    </div>
{% endblock %}
